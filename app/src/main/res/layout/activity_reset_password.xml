<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResetPasswordActivity">

    <TextView
        android:id="@+id/resetPasswordTitle"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@android:color/background_dark"
        android:text="@string/change_password"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/resetPassswordNewPassword"
        android:layout_width="112dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="232dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/password"
        android:typeface="serif"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="138dp" />

    <EditText
        android:id="@+id/resetPassswordConfirmNewPassword"
        android:layout_width="178dp"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="130dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/confirm_password"
        android:textSize="18sp"
        android:typeface="serif"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="234dp" />

    <Button
        android:id="@+id/careProviderAddAPatient"
        android:layout_width="148dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:background="@drawable/frame2"
        android:text="@string/save"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="438dp" />

    <EditText
        android:id="@+id/resetPassswordOldPassword"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="151dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Old password:"
        android:typeface="serif" />

    <EditText
        android:id="@+id/confirmNewPassword"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/resetPassswordConfirmNewPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editNewPassword"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/resetPassswordNewPassword"
        android:layout_toEndOf="@+id/resetPassswordNewPassword"
        android:ems="10"
        android:inputType="textPassword" />
</RelativeLayout>